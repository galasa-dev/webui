{
  "name": "Node.js & TypeScript",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",

  "initializeCommand": "mkdir -p ${localEnv:HOME}/.m2",

  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installZsh": "true",
      "installJupyter": "false"
    },
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17",
      "installGradle": "true",
      "gradleVersion": "8.14.3"
    }
  },

  "remoteUser": "node",

  "mounts": [
    "source=${localEnv:HOME}/.m2,target=/home/node/.m2,type=bind,consistency=cached",
    "source=${localEnv:NODE_EXTRA_CA_CERTS},target=/home/node/certs.pem,type=bind,consistency=cached"
  ],

  // Note: changing your local environment variables requires a vscode reset.
  "containerEnv": {
    "GALASA_DEV_TOKEN":"${localEnv:GALASA_DEV_TOKEN}",
    "GALASA_API_SERVER_URL":"${localEnv:GALASA_API_SERVER_URL}",
    "SOURCE_MAVEN":"${localEnv:SOURCE_MAVEN}",
    "NODE_EXTRA_CA_CERTS":"/home/node/certs.pem"
  },

  "forwardPorts": [3000],

  "postCreateCommand": "bash -c './.devcontainer/dev-container-setup.sh && ./build-locally.sh -c'"
}
